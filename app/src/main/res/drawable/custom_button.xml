<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button when pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_background" />
            <stroke
                android:width="2dp"
                android:color="@color/button_clicked_border" />
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" />
        </shape>
    </item>

    <!-- Default button state -->
    <item>
        <shape>
            <solid android:color="@color/button_background" />
            <stroke
                android:width="2dp"
                android:color="@color/button_border_left" />
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" />
        </shape>
    </item>
</selector>
